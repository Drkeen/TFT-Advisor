{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/tft/champions.schema.json",
  "title": "TFT Champions Data",
  "type": "object",
  "additionalProperties": false,
  "required": ["version","champions"],
  "properties": {
    "version": { "type": "string", "minLength": 1, "maxLength": 16 },
    "champions": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id","name","cost","traits","tags","preferred_item_tags","positioning"],
        "properties": {
          "id": { "type": "string", "pattern": "^[a-z0-9_]+$" },
          "name": { "type": "string", "minLength": 1, "maxLength": 64 },
          "cost": { "type": "integer", "minimum": 0, "maximum": 10 },
          "traits": {
            "type": "array",
            "items": { "type": "string", "pattern": "^[a-z0-9_]+$" },
            "uniqueItems": true
          },
          "tags": {
            "type": "object",
            "additionalProperties": false,
            "required": ["roles","scaling","patterns","utility_sources","constraints"],
            "properties": {
              "roles": {
                "type": "array",
                "minItems": 1,
                "items": { "type": "string", "enum": ["primary_carry","secondary_carry","main_tank","support","trait_bot","flex"] },
                "uniqueItems": true
              },
              "scaling": {
                "type": "array",
                "items": { "type": "string", "enum": ["AD","AP","AS","mana","crit"] },
                "uniqueItems": true
              },
              "patterns": {
                "type": "array",
                "items": { "type": "string", "enum": ["single_target","aoe","burst","ramp","dot"] },
                "uniqueItems": true
              },
              "utility_sources": {
                "type": "array",
                "items": { "type": "string", "enum": ["antiheal_source","shred_source","cc_source","cleanse_source"] },
                "uniqueItems": true
              },
              "constraints": {
                "type": "array",
                "items": { "type": "string", "enum": ["needs_3_items","backline_safe","frontline_only"] },
                "uniqueItems": true
              }
            }
          },
          "preferred_item_tags": {
            "type": "array",
            "items": { "type": "string", "enum": ["damage","tank","mana","attack_speed","shred","antiheal","cc","cleanse","econ","artifact"] },
            "uniqueItems": true
          },
          "positioning": { "type": "string", "enum": ["front","mid","back"] },
          "notes": {
            "type": "object",
            "additionalProperties": true
          }
        }
      }
    }
  }
}
